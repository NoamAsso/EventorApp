<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="108dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"></RelativeLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/event_page_background"
                android:orientation="horizontal">


                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/image_item"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="210dp"
                        android:layout_height="25dp"

                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/event_title_item"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:maxWidth="80dp"
                            android:paddingStart="5dp"
                            android:text="title"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/event_date_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="195dp"
                        android:layout_height="50dp"


                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/location_item"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.73"
                            android:paddingStart="5dp"
                            android:text="Location"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left">

                            <LinearLayout
                                android:layout_width="68dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/time_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dp"
                                    android:text="error time"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="195dp"
                        android:layout_height="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attending: "
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/current_num_users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/description_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/max_num_users"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="max"
                            android:textSize="10sp" />


                        <TextView
                            android:id="@+id/price"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Price: "
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="10dp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/details_button"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/curve_edges_button_more"
                        android:text="Details"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="64dp"
                        android:layout_height="16dp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/event_join"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/curve_edges_button_location"
                        android:text="Join"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="64dp"
                        android:layout_height="10dp"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"></RelativeLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="left"
            android:visibility="invisible" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>