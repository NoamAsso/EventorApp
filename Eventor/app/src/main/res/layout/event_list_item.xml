<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#aaffffff"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/picture_background"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/add_image" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:orientation="horizontal">


                <TextView
                    android:id="@+id/event_title_item"
                    android:layout_width="120dp"
                    android:maxWidth="80dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="title"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/event_date_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"


                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Category"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attending: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/current_num_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/description_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/max_num_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="max"
                    android:textSize="10sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="18dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/max_num_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="50dp"
                    android:text="Created by:"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="invisible" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/curve_edges_button_more"
                android:text="More..."
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/curve_edges_button_location"
                android:text="Location"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>